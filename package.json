{
  "name": "e-commerce-api-ts",
  "version": "1.0.0",
  "description": "BackEnd of e-commerce project with typescript",
  "main": "./src/index.ts",
  "scripts": {
    "start": "tsc && node ./dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "devprepare": "husky install ./githooks && husky add ./githooks/pre-commit \"npx lint-staged\" && husky add ./githooks/commit-msg \"npx --no -- commitlint --edit ${1}\""
  },
  "keywords": [
    "e-commerce",
    "backend",
    "api",
    "typescript"
  ],
  "author": "Maragrev",
  "license": "MIT",
  "dependencies": {
    "@types/express": "4.17.15",
    "corns": "0.0.0",
    "dotenv": "16.0.3",
    "mysql": "2.18.1",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "commitizen": "4.2.6",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "ts-standard": "12.0.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "ts-standard"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
